#:kivy 1.8.0
<NotificationDemo>:
    orientation: 'vertical'
    notification_title: notification_title
    notification_text: notification_text
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, None
        TextInput:
            id: notification_title
            text: 'Put title here'
            size_hint: 1, None
        TextInput:
            id: notification_text
            text: 'Put message here'
            size_hint: 1, None
    Button:
        text: 'Simple Notification'
        size_hint: 1, None
        on_press: root.do_notify(notification_title.text, notification_text.text)
    Button:
        text: 'Fancy Notification'
        size_hint: 1, None
        on_press: root.do_notify(notification_title.text, notification_text.text, app_name="Plyer Notification Example", app_icon='plyer_icon.png')
